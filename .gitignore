# Ignore everything
*

# But not these directories
!backend/
!backendV2/
!frontend/
!admin/
!adminV2/
!deployment/

# And not these files
!.gitignore
!README.md

# Allow frontend source files
!frontend/src/
!frontend/src/**/*

# Allow admin source files
!admin/src/
!admin/src/**/*

# Allow admin config files
!admin/package.json
!admin/package-lock.json
!admin/vite.config.js
!admin/tailwind.config.js
!admin/postcss.config.js
!admin/index.html
!admin/README.md

# Allow deployment files
!deployment/
!deployment/**/*

# Node modules and env files in any directory
**/node_modules/
**/.env
**/.env.*

# Build directories
**/dist/
**/build/

# Logs
**/*.log
**/npm-debug.log*

# OS generated files
.DS_Store
.DS_Store?
._*
.Spotlight-V100
.Trashes
ehthumbs.db
Thumbs.db 